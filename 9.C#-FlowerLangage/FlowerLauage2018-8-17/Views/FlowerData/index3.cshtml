        .button{
		    background:#1AAB8A;
		    color:#fff;
		    border:none;
		    position:relative;
		    height:40px;
            width:80px;
		    font-size:1.2em;
		    cursor:pointer;
		    transition:800ms ease all;
		    outline:none;
            margin-top:-1px;
	    }
	    .button:hover{
		    background:#fff;
		    color:#1AAB8A;
	    }
	    .button:before,button:after{
		    content:'';
		    position:absolute;
		    top:0;
		    right:0;
		    height:2px;
		    width:0;
		    background: #1AAB8A;
		    transition:400ms ease all;
	    }
	    .button:after{
		    right:inherit;
		    top:inherit;
		    left:0;
		    bottom:0;
	    }
	    .button:hover:before,button:hover:after{
		    width:100%;
		    transition:800ms ease all;
	    }
    </style>
