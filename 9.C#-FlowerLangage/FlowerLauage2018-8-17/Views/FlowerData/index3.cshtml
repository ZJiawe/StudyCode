	<script>
		$(function () {
			$(".container").width($(window).width()-100);
		})
		$(window).resize(function() {
			$("#content").width($(document).width());
			$(".container").width($(window).width()-100);
			console.log($(window).width()-100);
		});
		$("#reach").click(function () {
		    if ($("#input_reach").val() != "") {
		        var value = $("#input_reach").val();
		        var ldata = {
		            "flowerData": {
		                Alias: value,
		            }
		        };
		        $(".item").css('background-color', '#333');
		        $.ajax({
		            url: '/FlowerData/GetFlowerDatas',
		            type: 'post',
		            dataType: "json",
		            data: { querystring: JSON.stringify(ldata) },
		            success: function (data) {
		                for (var i = 0; i < data.rows.length; i++) {
		                    console.log(data.rows[i].Alias);
		                    console.log(typeof(data.rows[i].Alias));
		                    console.log(data.rows[i].Introduction);
		                    console.log(data.rows[i].Techniques);
		                    $("#Alias").val(data.rows[i].Alias);
		                    $("#Introduction").val(data.rows[i].Introduction);
		                    $("#Techniques").val(data.rows[i].Techniques);
		                };
		            }
		        });
		    }
		});
